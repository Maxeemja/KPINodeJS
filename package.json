{
	"name": "lab1",
	"version": "1.0.0",
	"description": "Lab 1",
	"main": "index.js",
	"scripts": {
		"prepare": "husky install",
		"server:watch": "ts-node-dev --respawn --transpile-only src/index.ts",
		"start": "nodemon --watch './src/**/*.ts' --exec ts-node ./src/index.ts",
		"build": "tsc",
		"lint": "eslint --cache --ext .ts .",
		"lint:fix": "eslint --cache --ext .ts . --fix",
		"prettier": "prettier --ignore-path .gitignore --check \"**/*.+(js|ts|json)\"",
		"prettier:fix": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
		"pre-commit": "lint-staged --relative"
	},
	"author": "",
	"license": "ISC",
	"lint-staged": {
		"*.{js,ts}": [
			"eslint --fix"
		],
		"**/*.+(js|ts|json)": [
			"npm run prettier"
		]
	},
	"devDependencies": {
		"@babel/core": "^7.18.5",
		"@babel/preset-env": "^7.18.2",
		"@babel/preset-typescript": "^7.17.12",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/morgan": "^1.9.3",
		"@types/node": "^17.0.45",
		"@typescript-eslint/eslint-plugin": "^5.27.1",
		"@typescript-eslint/parser": "^5.27.1",
		"babel-jest": "^28.1.1",
		"eslint": "8.22.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-sonar": "^0.9.2",
		"husky": "^4.3.8",
		"nodemon": "^2.0.16",
		"prettier": "^2.7.1",
		"ts-node": "^10.8.1",
		"ts-node-dev": "^2.0.0",
		"typescript": "^4.7.3"
	},
	"dependencies": {
		"@types/uuid": "^8.3.4",
		"cors": "^2.8.5",
		"dotenv": "^16.0.1",
		"express": "^4.18.1",
		"joi": "^17.6.0",
		"log4js": "^6.5.2",
		"morgan": "^1.10.0",
		"uuid": "^9.0.0"
	}
}
